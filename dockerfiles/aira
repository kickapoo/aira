FROM ubuntu:16.04

# Set environment varibles
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1
ENV LANG C.UTF-8
ENV LC_ALL C.UTF-8

RUN apt-get update
RUN apt-get -y upgrade

RUN apt-get -y install wget python3-pip python3-numpy python3-gdal
RUN apt-get -y install build-essential

RUN pip3 install --upgrade pip
RUN pip3 install pipenv

# Dickinson
RUN wget https://github.com/openmeteo/dickinson/archive/0.2.1.tar.gz
RUN tar xzf 0.2.1.tar.gz
WORKDIR dickinson-0.2.1
RUN ./configure
RUN make
RUN make install
RUN ldconfig

# Aira virtualenv
RUN mkdir /code
WORKDIR /code

RUN pip install pipenv
COPY ./Pipfile /code/Pipfile
RUN pipenv install --deploy --system --skip-lock --dev -v
